{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "break",
  "version": "0.1.0",
  "identifier": "ch.break.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "break",
        "width": 1200,
        "height": 800,
        "center": true,
        "minimizable": false,
        "maximizable": false,
        "decorations": false,
        "shadow": false,
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "closable": false,
        "transparent": true,
        "dragDropEnabled": false,
        "incognito": true,
        "visibleOnAllWorkspaces": true,

        "maximized": true,
        "resizable": true,
        "devtools": true,

        "windowEffects": {
          "effects": []
        }
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
